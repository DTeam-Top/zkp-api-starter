{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "ESNext",
    "esModuleInterop": true,
    "removeComments": true,
    "newLine": "lf",
    "noUnusedLocals": false,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "declaration": false
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
